@using OduncKitapASPNETMVCWebSolution_UI.Models
@model KitapViewModel
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<div class="form-group">
    @using (Html.BeginForm("Ekle", "Kitap", FormMethod.Post,

        new
        {
            @class = "form-horizontal",
            enctype = "multipart/form-data"
        }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Kitap Adı:") <br />
            @Html.TextBoxFor(x => x.KitapAdi,
           new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Kitap Türü:") <br />
            @Html.DropDownListFor(x => x.TurId, (List<SelectListItem>)ViewBag.TurListesi,
           new { @class = "form-control" })

        </div>

        <div class="form-group">
            @Html.Label("Yazarlar:") <br />
            @Html.DropDownListFor(x => x.YazarId, (List<SelectListItem>)ViewBag.YazarListesi,
           new { @class = "form-control" })

        </div>

        <div class="form-group">
            @Html.Label("Sayfa Sayısı:") <br />
            @Html.TextBoxFor(x => x.SayfaSayisi,
           new { @class = "form-control", type = "number", min = 0 })
        </div>

        <div class="form-group">
            @Html.Label("Stok:") <br />
            @Html.TextBoxFor(x => x.StokAdeti,
           new { @class = "form-control", type = "number", min = 0 })
        </div>
        <div class="form-group">
            @Html.Label("Resim:") <br />
            @Html.TextBoxFor(x => x.Resim, new { @class = "form-control", type = "file", multiple = false })
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-info"> KİTAP EKLE</button>
        </div>
    }
</div>

